<div class="follow-me">
  {%- if locale == 'nl' -%}
    <p>Je kunt mij ook vinden op:</p>
  {%- else -%}
    <p>Follow me at:</p>
  {%- endif -%}
  <ul class="follow-list">
    <li class="follow-list__item">{{ 'twitter.svg' | getInlineSVG | safe }}
      <a class="twitter" href="https://twitter.com/robinbakker" title="Twitter" rel="me noopener" target="_blank">Twitter</a>
    </li>
    <li class="follow-list__item">{{ 'linkedin.svg' | getInlineSVG | safe }}
      <a class="linkedin" href="https://nl.linkedin.com/in/rhbakker/" title="LinkedIn" rel="me noopener" target="_blank">LinkedIn</a>
    </li>
    <li class="follow-list__item">{{ 'github.svg' | getInlineSVG | safe }}
      <a class="github" href="https://github.com/robinbakker" title="GitHub" rel="me noopener" target="_blank">GitHub</a>
    </li>
    <li class="follow-list__item">{{ 'medium.svg' | getInlineSVG | safe }}
      <a class="medium" href="https://medium.com/@robinbakker" title="Medium" rel="me noopener" target="_blank">Medium</a>
    </li>
  </ul>
